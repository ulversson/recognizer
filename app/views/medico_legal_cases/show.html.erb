<div class="row">
  <div class="col-xl-8 col-lg-7">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <%= @medico_legal_case.name %>'s case files
        </h6>        
      </div>
      <div class="card-body">
        <%= render "medico_legal_cases/photoswipe" %>
        <% @ordered_items.each do |file_item| %>
          <%= render "processing_result_files/file_item", file_item: file_item %>
        <% end %>
        <%#= render "uploaded_files/uploaded_files", uploaded_files: @ordered_items %>
      </div>
    </div>
  </div>
</div>
<p class='pull-left'>
  <%= link_to "/#/cases", class: "btn btn-secondary" do %>
    <i class='fas fa-arrow-left'></i>&nbsp;Go Back to the cases listing
  <% end %>
</p>